<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Button Style -->

    <style name="baseButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:background">@drawable/btn_style</item>
    </style>

    <style name="whiteBackgroundButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/splash_screen_background_color</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:background">@drawable/btn_white_style</item>
    </style>

    <!-- Textview Style -->

    <style name="textViewLargeSizeStyle" parent="Widget.AppCompat.TextView">
        <item name="android:gravity">center_horizontal|top</item>
        <item name="android:textColor">@color/header_color</item>
        <item name="android:textSize">@dimen/_25ssp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="textViewSecondLargeSizeStyle" parent="Widget.AppCompat.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/sub_header_color</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="rememberMeTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/edit_text_color</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="forgotPasswordTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/splash_screen_background_color</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="dontHaveAnAccountStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/edit_text_color</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="privacyPolicyTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/edit_text_color</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="titleBarTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <!-- Card View Style -->

    <style name="cardViewStyle" parent="CardView">
        <item name="cardElevation">@dimen/_50sdp</item>
    </style>

    <style name="signUpCardViewStyle" parent="CardView">
        <item name="cardCornerRadius">@dimen/_15sdp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <!-- Edit text Style -->

    <style name="customEditTextSignIn" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:textColor">@color/edit_text_color</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:drawablePadding">@dimen/_12sdp</item>
        <item name="android:paddingStart">@dimen/_15sdp</item>
        <item name="android:paddingEnd">@dimen/_5sdp</item>
        <item name="android:background">@drawable/edit_text_backgroud</item>
    </style>

    <style name="customEditTextSignUp" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:textColor">@color/edit_text_color</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:drawablePadding">@dimen/_12sdp</item>
        <item name="android:paddingStart">@dimen/_20sdp</item>
        <item name="android:paddingEnd">@dimen/_5sdp</item>
        <item name="android:background">@drawable/edit_text_backgroud</item>
    </style>

</resources>