<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgMoreOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvMoreOptionsName"
        style="@style/textViewMediumStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:textColor="@color/edit_text_color"
        app:layout_constraintBottom_toBottomOf="@+id/imgMoreOptions"
        app:layout_constraintStart_toEndOf="@id/imgMoreOptions"
        app:layout_constraintTop_toTopOf="@+id/imgMoreOptions" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/currencyName"
        style="@style/textViewMediumStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_9sdp"
        android:text="@string/tv_usd"
        android:textColor="@color/edit_text_color"
        app:layout_constraintBottom_toBottomOf="@+id/imgMoreOptions"
        app:layout_constraintEnd_toStartOf="@+id/btnArrow"
        app:layout_constraintTop_toTopOf="@+id/imgMoreOptions" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btnArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_12sdp"
        android:background="@null"
        android:src="@drawable/ic_black_arrow_icon"
        app:layout_constraintBottom_toBottomOf="@+id/imgMoreOptions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgMoreOptions" />

</androidx.constraintlayout.widget.ConstraintLayout>