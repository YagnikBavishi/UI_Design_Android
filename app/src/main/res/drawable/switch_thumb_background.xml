<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape android:shape="oval">
            <solid android:color="@color/thumb_color" />
            <size android:width="@dimen/_15sdp" android:height="@dimen/_15sdp" />
            <stroke android:width="@dimen/_4sdp" android:color="#0000ffff" />
        </shape>
    </item>

    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="@color/splash_screen_background_color" />
            <size android:width="@dimen/_15sdp" android:height="@dimen/_15sdp" />
            <stroke android:width="@dimen/_4sdp" android:color="#0000ffff" />
        </shape>
    </item>
</selector>