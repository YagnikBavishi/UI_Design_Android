<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <size android:width="@dimen/_25sdp" android:height="@dimen/_15sdp" />
            <stroke android:width="@dimen/_1sdp" android:color="@color/splash_screen_background_color" />
            <corners android:radius="50dp" />
        </shape>
    </item>

    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <size android:width="@dimen/_25sdp" android:height="@dimen/_15sdp" />
            <solid android:width="1dp" android:color="@color/white" />
            <stroke android:width="@dimen/_1sdp" android:color="@color/thumb_color" />
            <corners android:radius="50dp" />
        </shape>
    </item>

</selector>